<h3>Image</h3>
<div class="form-group">
    <label for="imageSrc">Image Url</label>
    <input class="form-control" type="text" id="imageSrc" @bind="Model.ImageUrl" @bind:after="OnValuesChanged" />
</div>
<div class="form-group">
    <label for="imageAlt">Image Alt</label>
    <input class="form-control" type="text" id="imageAlt" @bind="Model.AltText" @bind:after="OnValuesChanged" />
</div>
