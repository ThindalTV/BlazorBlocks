@using BlazorBlocks.Blocks;
@using BlazorBlocks.Blocks.TitleBlock;

@inherits BaseEditor<TitleBlockModel>
<input class="form-control" style="width: 100%; height: 7rem; text-align: center; font-size: 4rem;"
       value="@Model.Title" @onchange="(e) => FieldChanged((string)e.Value)" />

@code {

    protected void FieldChanged(string val)
    {
        Model.Title = val;
        Model?.OnUpdated?.Invoke();
    }
}
